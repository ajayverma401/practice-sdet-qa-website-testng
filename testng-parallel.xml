<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelExecutionPractice" thread-count="3" parallel="tests">
    <!-- ParallelTest -->
  <test name="ParallelTest_Chrome">
  	<parameter name = "browser" value = "chrome"/>
  	<parameter name  = "username" value = "student"/>
  		<parameter name = "password" value = "Password123"/>
    <classes>
      <class name="com.ajay.automation.tests.ParameterizedTest"/>
      <class name="com.ajay.automation.tests.ValidateInputFields"/>
    </classes>
  </test>
  
  
  <test name="ParallelTest_Edge">
  <parameter name = "browser" value = "edge"/>
  <parameter name  = "username" value = "student"/>
  		<parameter name = "password" value = "Password123"/>
    <classes>
      <class name="com.ajay.automation.tests.ParameterizedTest"/>
      <class name="com.ajay.automation.tests.ValidateInputFields"/>
    </classes>
  </test> 
  
  
  <test name="ParallelTest_Firefox">
  <parameter name = "browser" value = "firefox"/>
  <parameter name  = "username" value = "student"/>
  		<parameter name = "password" value = "Password123"/>
    <classes>
      <class name="com.ajay.automation.tests.ParameterizedTest"/>
      <class name="com.ajay.automation.tests.ValidateInputFields"/>
    </classes>
  </test> 
  
   <!-- ParallelTest -->
</suite> <!-- ParallelExecutionPractice -->
